# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=TrafficWork App
APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trafficwork_db

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product/Price IDs
STRIPE_MONTHLY_PRICE_ID=price_monthly_subscription_id
STRIPE_ANNUAL_PRICE_ID=price_annual_subscription_id

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Keitaro Tracking Configuration
KEITARO_TRACKER_URL=https://your-keitaro-domain.com
KEITARO_POSTBACK_KEY=your_postback_security_key
KEITARO_CAMPAIGN_ID=your_campaign_id
KEITARO_JS_ENABLED=true

# Keitaro Status Codes
KEITARO_STATUS_REGISTRATION=reg
KEITARO_STATUS_PURCHASE=sale

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# SSL/HTTPS Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Apple Pay Domain Verification (for production)
APPLE_PAY_DOMAIN_VERIFICATION_FILE=/path/to/apple-developer-merchantid-domain-association

# Admin Configuration
ADMIN_EMAIL=admin@example.com
